rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Lectures subcollection - users can only access their own lectures
      match /lectures/{lectureId} {
        allow read, write: if isOwner(userId);
        
        // Allow creating new lectures
        allow create: if isOwner(userId) && 
          request.resource.data.keys().hasAll(['title', 'status', 'createdAt']) &&
          request.resource.data.status is string &&
          request.resource.data.title is string;
        
        // Allow updating existing lectures
        allow update: if isOwner(userId) && 
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['title', 'thumbnailUrl', 'duration', 'date', 'status', 'progress', 'summary', 'transcript', 'questions', 'slides', 'flashcards', 'category', 'modelType', 'updatedAt']);
        
        // Allow deleting own lectures
        allow delete: if isOwner(userId);
      }
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

