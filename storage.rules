rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access files in their own folder
    match /users/{userId}/{allPaths=**} {
      // Allow read/write if user owns the resource
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Audio files - users can read/write their own audio files
    match /audio/{userId}/{allPaths=**} {
      // Allow read if file is public or user owns it
      allow read: if true; // Public read access for audio files
      // Allow write if user owns the resource
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

